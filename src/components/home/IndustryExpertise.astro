---
// IMPORTING CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/cdn"

// IMPORTING ATOMS
import H2 from "../../atoms/H2.astro"

const { data } = Astro.props
---
<section class="relative md:pt-72 md:pb-[360px]">
    <div class="md:absolute md:-left-[480px] md:top-52">
        <div class="relative">
            <div class="bg-zinc-200 w-full h-96 md:h-[700px]">
                <img
                    src={ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY }
                    alt=""
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="hidden md:block">
                {

                    data.images.map( ( item ) => {

                        return(
                            <div class="h-[560px] absolute -top-[120px] -right-2">
                                <img
                                    src={ CDN_LINK + item.file + "?quality=" + IMAGE_QUALITY }
                                    alt=""
                                    class="w-full h-full object-contain"
                                />
                            </div>
                        )

                    })

                }
            </div>
        </div>
    </div>
    <div class="flex md:justify-end md:pr-52">
        <div class="space-y-2 md:w-[500px]">
            <div class="w-[50%]">
                <H2>{ data.title }</H2>
            </div>
            <div class="pt-4">
                <p class="text-urbaninsight_slate font-open_sans text-xl leading-loose">{ data.description }</p>
            </div>
        </div>
    </div>
</section>
