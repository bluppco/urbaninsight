---
// ATOMS
import ArrowButton from "../../atoms/ArrowButton.astro"
import H2 from "../../atoms/H2.astro"

const { data } = Astro.props
---
<section class="flex justify-center w-full md:absolute md:-top-[344px] z-10">
    <div class="grid md:grid-cols-3 md:gap-20 md:bg-urbaninsight_light_blue md:h-[610px] md:w-[1000px] md:rounded-xl md:p-32 md:shadow-2xl pt-4 md:pt-48">
        <H2 right={ true } leading={ true }>{ data.title }</H2>
        <div class="flex flex-col gap-8 md:col-span-2">
            <p class="text-xl font-open_sans text-urbaninsight_slate leading-loose">We provide exceptionally strong project leadership informed by data-driven strategy and based on technical expertise to develop websites that work, for organizations that make a difference.</p>
            <ArrowButton large={ true }>Contact Us</ArrowButton>
        </div>
    </div>
</section>