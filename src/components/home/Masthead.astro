---
// IMPORTING CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/cdn"

const { data } = Astro.props
---
<section class="h-[1080px] relative z-30">
    <div class="pt-20 md:pt-[66px] md:pl-[120px]">
        <div class="md:w-[45%] p-20 md:p-0">
            <p class="text-[50px] md:text-[78px] text-center md:text-left uppercase text-white font-trumpsoftpro font-bold leading-none">{ data.title }</p>
        </div>
    </div>
    <div class="hidden md:block">
        {

            data.images.map( ( item ) => {

                if ( item.order === 0 )

                return(
                    <div class="w-[460px] absolute bottom-44 -left-8">
                        <img
                            src={ CDN_LINK + item.file + "?quality=" + IMAGE_QUALITY }
                            alt=""
                            class="w-full h-full"
                        />
                    </div>
                )

                else if ( item.order === 1 )

                return(
                    <div class="w-[360px] absolute bottom-36 left-[600px]">
                        <img
                            src={ CDN_LINK + item.file + "?quality=" + IMAGE_QUALITY }
                            alt=""
                            class="w-full h-full"
                        />
                    </div>
                )

                else

                return(
                    <div class="w-[460px] absolute top-6 right-10">
                        <img
                            src={ CDN_LINK + item.file + "?quality=" + IMAGE_QUALITY }
                            alt=""
                            class="w-full h-full"
                        />
                    </div>
                )


            })

        }
    </div>
</section>
