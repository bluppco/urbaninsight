---
// IMPORTING CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../constants/cdn"

// IMPORTING ATOMS
import H2 from "../../atoms/H2.astro"

const { data } = Astro.props
---
<section class="relative pt-72 pb-[360px]">
    <div class="absolute -left-[500px] top-52">
        <div class="relative">
            <div class="bg-zinc-200">
                <img
                    src={ CDN_LINK + data.cover + "?quality=" + IMAGE_QUALITY }
                    alt=""
                    class="w-full h-full object-cover"
                />
            </div>
            {

                data.images.map( ( item ) => {

                    return(
                        <div class="h-[560px] absolute -top-[120px] -right-2">
                            <img
                                src={ CDN_LINK + item.file + "?quality=" + IMAGE_QUALITY }
                                alt=""
                                class="w-full h-full object-contain"
                            />
                        </div>
                    )

                })

            }
        </div>
    </div>
    <div class="flex justify-end pr-52">
        <div class="space-y-2 w-[500px]">
            <div class="w-[50%]">
                <H2>{ data.title }</H2>
            </div>
            <div class="pt-4">
                <p class="text-urbaninsight_slate font-open_sans text-xl leading-loose">{ data.description }</p>
            </div>
        </div>
    </div>
</section>
